# Mock mode: set to true to skip Whisper model loading (uses dummy transcripts)
MOCK_MODE=true

# Whisper model size: tiny, base, small, medium, large
# Smaller = faster + less RAM, larger = more accurate
WHISPER_MODEL=base

# Force language (leave empty for auto-detect)
# WHISPER_LANGUAGE=en

# Summary settings
SUMMARY_SENTENCE_COUNT=5

# Max upload size in MB
MAX_FILE_SIZE_MB=100

# Debug mode
DEBUG=true
